---
import type { CollectionEntry } from "astro:content";

interface Props {
    post: CollectionEntry<"blogs">;
}

const { post } = Astro.props;
const { title, description, publishDate } = post.data;

const formattedDate = publishDate.toLocaleDateString("pt-BR", {
    year: "numeric",
    month: "long",
    day: "numeric",
});
---

<article class="group">
    <a href={`/blog/${post.slug}`} class="block">
        <time
            datetime={publishDate.toISOString()}
            class="text-sm font-sans uppercase tracking-wide text-accent"
        >
            {formattedDate}
        </time>

        <h2
            class="text-2xl font-headline font-bold mt-2 mb-3 group-hover:text-accent transition-colors"
        >
            {title}
        </h2>

        <p class="text-accent leading-relaxed">{description}</p>
    </a>
</article>
